- if(loggedIn)
    #login-status-text
        span #{name}
        img(src=`https://minotar.net/avatar/${name}` alt="skin head"
            style="margin-left: 8px; width: 18px; vertical-align: middle")
    .menu
        a.item(href="./settings.html") Settings
        .item(onclick="auth.logout()") Logout
- else
    a#login-status-text(onclick="auth.showLoginModal()") Login