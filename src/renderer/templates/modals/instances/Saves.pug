.header Data
.content
	.ui.secondary.menu
		a.item(data-tab="worlds") Worlds
		a.item(data-tab="servers") Servers
	.ui.tab.segment(data-tab="worlds" is="saves-tab-world")
		button.ui.basic.button Refresh
		table.ui.celled.table
			thead
				tr
					th World Name
					th Last Played
					th Version
			tbody
	.ui.tab.segment(data-tab="servers" is="saves-tab-server")
		.dimmable
			.ui.inverted.dimmer
				.ui.loader
			button.ui.basic.button Refresh
			table.ui.celled.table
				thead
					tr
						th.six.wide Server name
						th.six.wide IP Address
						th.four.wide Status
				tbody
				tfoot
.actions
	button.ui.primary.approve.button Close
