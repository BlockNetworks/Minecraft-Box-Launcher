extend layout

block css
	link(rel="stylesheet", href="../../src/renderer/css/instances.css")

block content
	h1 Instances
	.ui.button.right.floated.green.inverted(onclick="Render.showSettingsModal()") #[i.fas.fa-sliders-h.fa-fw] Settings
	.ui.primary.button(onclick="Render.newInstance();") #[i.fas.fa-plus.fa-fw] New Instance
	div(is="instance-list")
block outside
	#instance-info
		.ui.container
			.ui.raised.segment
				p Select an instance from above to view and launch it
